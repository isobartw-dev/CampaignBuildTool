{
  "name": "project-dev-tool",
  "version": "2.0.0",
  "description": "ISOBAR TW frontend project development tool",
  "dependencies": {
    "autoprefixer": "^8.2.0",
    "browser-sync": "^2.23.6",
    "concurrently": "^4.1.0",
    "cssnano": "^4.1.10",
    "dev-ip": "1.0.1",
    "fs-extra": "^7.0.1",
    "imagemin": "5.3.1",
    "imagemin-gifsicle": "5.2.0",
    "imagemin-jpeg-recompress": "5.1.0",
    "imagemin-pngquant": "5.0.1",
    "imagemin-svgo": "5.2.2",
    "ngrok": "^2.3.0",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.10",
    "postcss": "^7.0.14",
    "postcss-sprites": "4.2.1",
    "postcss-url": "^8.0.0",
    "sharp": "^0.21.3",
    "stylelint": "^9.10.1",
    "stylelint-config-sass-guidelines": "^5.3.0",
    "stylelint-selector-pattern": "0.0.2",
    "tiny-sprintf": "latest",
    "winreg": "1.2.2"
  },
  "scripts": {
    "prepublish": "node task/init.js",
    "runIIS": "node task/runIIS.js",
    "dev": "concurrently \"npm run watch:css\" \"node task/browsersync.js\"",
    "watch:css": "node task/watch-css.js",
    "watch:image": "node task/watch-image.js",
    "watch": "concurrently \"npm:watch:*\"",
    "min:css": "node task/cssmin.js",
    "min:image": "node task/imagemin.js",
    "min:css+image": "del /s npm-debug.log.* && npm run deploy:css && npm run deploy:image"
  },
  "stylelint": {
    "extends": "stylelint-config-sass-guidelines",
    "plugins": "stylelint-selector-pattern",
    "rules": {
      "selector-class-pattern": null,
      "order/properties-alphabetical-order": null,
      "xi/selector-pattern": [
        "^{block}({element})?({modifier})?({pseudo})?$",
        {
          "subpatterns": {
            "block": "\\.[a-z][a-zA-Z0-9]+",
            "modifier": "--[a-z][a-zA-Z0-9]+",
            "element": "-[a-z][a-zA-Z0-9]+",
            "pseudo": ":{1,2}[a-z-]+"
          }
        }
      ]
    }
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/isobartw-dev/project-dev-tool.git"
  },
  "author": "ISOBAR_TW-frontend",
  "bugs": {
    "url": "https://github.com/isobartw-dev/project-dev-tool.git/issues"
  },
  "homepage": "https://github.com/isobartw-dev/project-dev-tool.git#readme"
}
