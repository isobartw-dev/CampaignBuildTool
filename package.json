{
	"name": "project-dev-tool",
	"version": "2.0.0",
	"description": "ISOBAR TW frontend project development tool",
	"dependencies": {
		"@csstools/postcss-sass": "latest",
		"autoprefixer": "^8.2.0",
		"browser-sync": "^2.23.6",
		"concurrently": "^4.1.0",
		"cssnano": "latest",
		"dev-ip": "1.0.1",
		"imagemin": "5.3.1",
		"imagemin-gifsicle": "5.2.0",
		"imagemin-jpeg-recompress": "5.1.0",
		"imagemin-pngquant": "5.0.1",
		"imagemin-svgo": "5.2.2",
		"ngrok": "^2.3.0",
		"onchange": "git+https://github.com/isobartw-dev/onchange.git",
		"postcss": "^7.0",
		"postcss-scss": "2.0.0",
		"postcss-sprites": "4.2.1",
		"postcss-url": "^8.0.0",
		"sharp": "^0.21.0",
		"tiny-sprintf": "latest",
		"winreg": "1.2.2"
	},
	"scripts": {
		"prepublish": "node task/init.js",
		"runIIS": "node task/runIIS.js",
		"dev": "concurrently \"npm run watch\" \"node task/browsersync.js\"",
		"watch:css": "onchange --await-write-finish -v -k -o \"> task/css.txt && node task/csscompiled.js\" \"**/{css,css/*}/*.{scss,css}\" -e \"**/*/{style,style-source}.css\" -- echo {{changed}}",
		"watch:image": "onchange --await-write-finish -k -f \"add change\" \"E:/Snow.Huang/My documents/Desktop/Output/*.png\" -- node task/imagefolder.js",
		"watch:imagemin": "onchange -v --await-write-finish -k -f \"add change\" \"**/{images,images/*}/*.{jpg,png,gif,svg}\" -- node task/imagemin.js",
		"watch": "concurrently \"npm:watch:*\"",
		"min:css": "node task/cssmin.js",
		"min:image": "node task/imagemin.js",
		"min:css+image": "del /s npm-debug.log.* && npm run deploy:css && npm run deploy:image"
	},
	"license": "ISC",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/isobartw-dev/CampaignBuildTool.git"
	},
	"author": "ISOBAR_TW-frontend",
	"bugs": {
		"url": "https://github.com/isobartw-dev/CampaignBuildTool.git/issues"
	},
	"homepage": "https://github.com/isobartw-dev/CampaignBuildTool.git#readme"
}
