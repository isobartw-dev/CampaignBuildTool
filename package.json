{
	"name": "CampaignBuildTool",
	"version": "1.0.0",
	"description": "ISOBAR TW frontend campaign build tool",
	"devDependencies": {
		"autoprefixer": "latest",
		"browser-sync": "^2.12.5",
		"css-mqpacker": "latest",
		"cssnano": "latest",
		"imagemin": "^4.0.0",
		"imagemin-jpeg-recompress": "^4.3.0",
		"imagemin-pngquant": "^4.2.2",
		"images": "github:zhangyuanwei/node-images",
		"ngrok": "^2.1.7",
		"nodemon": "^1.9.1",
		"parallelshell": "latest",
		"postcss": "latest",
		"postcss-clean": "^1.0.1",
		"postcss-sprites": "latest",
		"tiny-sprintf": "latest"
	},
	"scripts": {
		"build:folder": "md images\\sprite && md mobile\\images\\sprite",
		"build:css": "copy css\\style.css css\\style-edit.css && copy mobile\\css\\style.css mobile\\css\\style-edit.css",
		"prepublish": "parallelshell \"npm run build:folder\" \"npm run build:css\"",
		"runIIS": "runIIS.wsf",
		"watch:sprite": "nodemon -q -w \"C:/Users/snow/Desktop/Output/**/*\" -e png -i '*.jpg' --exec \"node task/imagefolder.js && node task/watch-postcss.js\"",
		"watch:css": "nodemon -q -w /css/style-edit.css -C --exec node task/watch-postcss.js",
		"watch:image": "nodemon -q -w \"C:/Users/snow/Desktop/Output/**/*\" -e png -i '*.jpg' --exec node task/imagefolder.js",
		"watch": "parallelshell \"npm run watch:image\" \"npm run watch:css\"",
		"deploy:css": "node task/deploy-postcss.js",
		"deploy:image": "node task/imagemin.js",
		"deploy": "npm run deploy:css && npm run deploy:image",
		"dev:sprite": "parallelshell \"watch:sprite\" \"node task/browsersync.js\"",
		"dev": "parallelshell \"npm run watch\" \"node task/browsersync.js\""
	},
	"license": "ISC",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/isobartw-dev/CampaignBuildTool.git"
	},
	"author": "ISOBAR_TW-frontend",
	"bugs": {
		"url": "https://github.com/isobartw-dev/CampaignBuildTool.git/issues"
	},
	"homepage": "https://github.com/isobartw-dev/CampaignBuildTool.git#readme"
}
