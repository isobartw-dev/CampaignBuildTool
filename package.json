      "max-nesting-depth": [
        2,
        {
          "ignoreAtRules": [
            "each",
            "media",
            "supports",
            "include",
            "at-root"
          ]
        }
      ],
      "plugin/selector-bem-pattern": {
        "componentName": "^[a-z][a-zA-Z0-9]+$",
        "componentSelectors": {
          "initial": "^\\.{componentName}(?:-[a-z][a-zA-Z0-9]+){0,1}(?:--[a-z][a-zA-Z0-9]+){0,2}(?:\\[.+\\])?$",
          "combined": "^\\.[a-z][a-zA-Z0-9]+(?:-[a-z][a-zA-Z0-9]+){0,1}(?:--[a-z][a-zA-Z0-9]+){0,2}(?:\\[.+\\])?$"
        },
        "implicitComponents": true
      }
    },
    "ignoreFiles": [
      "**/css/style.css",
      "**/css/style-*.css",
      "./css/**/base.scss",
      "./css/**/editor.scss",
      "**/sass/base.scss"
